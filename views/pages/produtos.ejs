<body>

  <% include ../partials/sidebar %>

  <div class="main-content">

    <% include ../partials/navbar %>
    <% include ../partials/produtos/header %>

    <div class="container-fluid mt--7">
      <div class="row">
          <div class="col-xl-12 order-xl-1">
            <div class="card bg-secondary shadow">
              <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                  <div class="col-8">
                    <h3 class="mb-0">Cadastrar</h3>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <div class="pl-lg-4">
                  <div class="row">

                    <div class="col-lg-4">
                        <label class="form-control-label" for="codigo">Código</label>
                        <input autocomplete="off" type="number" maxlength="15" class="form-control form-control-alternative" name="codigo" placeholder="Código" id="codigo">
                    </div>
                      
                    <div class="col-lg-8">
                        <label class="form-control-label" for="descricao">Descrição</label>
                        <input autocomplete="off" type="text" maxlength="200" class="form-control form-control-alternative" name="descricao" placeholder="Descrição" id="descricao">
                    </div>

                    <div class="col-lg-12">
                      <button class="btn btn-primary btn-block mt-4 mb-4 fa fa-check" id="confirmar"> Confirmar</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% include ../partials/footer %>

    </div>
  </div>

  <% include ../partials/scripts %>

  <script src="js/produtos.js"></script>
</body>
